{
  "type": "object",
  "properties": {
    "album": {
      "type": "string",
      "minLength": 1
    },
    "artist": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "title": "Long Description",
      "type": "string"
    },
    "art_received": {
      "type": "boolean"
    },
    "audio_received": {
      "type": "boolean"
    },
    "due_date": {
      "type": "string",
      "format": "date"
    },
    "recurrence": {
      "type": "string",
      "enum": ["Never", "Daily", "Weekly", "Monthly"]
    },
    "recurrence_interval": {
      "type": "integer"
    }
  },
  "required": ["name", "due_date"]
}
